<!DOCTYPE html>
<html lang="en">
<head>
    <link type="text/css" rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jsgrid/1.5.3/jsgrid.min.css" />
    <link type="text/css" rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jsgrid/1.5.3/jsgrid-theme.min.css" />
</head>
<body>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jsgrid/1.5.3/jsgrid.min.js"></script>
    <div class="Head">
        <h2> StudentDetails</h2>
    </div>
    <div id="jsGrid"></div>

    <script>
        $("#jsGrid").jsGrid({
            height: "500px",
            width: "100%",
            inserting: true,
            editing: true,
            sorting: true,
            paging: true,
            autoload: true,
            pageSize: 5,

            deleteConfirm: "Do you really want to delete student?",

            controller: {
                loadData: function () {
                    return $.ajax({
                        type: "GET",
                        url: "/Student/ReadData/",
                        dataType: "json"
                    });
                },
                insertItem: function (item) {
                    return $.ajax({
                        type: "POST",
                        url: "/Student/Insert",
                        data: item,
                        dataType: "json"
                    });
                },
                updateItem: function (item) {
                    return $.ajax({
                        type: "PUT",
                        url: "/Student/Edit/",
                        data: item,
                        dataType: "json"
                    });
                },
                deleteItem: function (item) {
                    return $.ajax({
                        type: "DELETE",
                        url: "/Student/Destroy/",
                        data: item,
                        dataType: "json"
                    });
                },
            },
            onItemInserted: function () {
                console.log("error")
                location.reload();
            },
            onItemUpdated: function () {
                console.log("error")
                location.reload();
            },

            fields: [
                { name: "id", type: "number", width: 50, readOnly: true },
                { name: "name", type: "text", width: 150, validate: "required" },
                { name: "phoneNumber", type: "text", width: 150},
                { name: "age", type: "number", width: 50, validate: "required" },
                { name: "city", type: "text", width: 100 },
                { type: "control" }
            ]
        });
    </script>
</body>
</html>









